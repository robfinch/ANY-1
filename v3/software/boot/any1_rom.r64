	stb		  $t0,INBUF-1[$s2]
	add		  $s2,$s2,#1
	add		  $t0,$s2,#INBUF
	slt		  $t0,#INBUF+$7F
	bt		  .0002
	stb		  $x0,INBUF[$s2]
	jmp		  .0001
.doBackspace:
  tst     $s1
	beq		  .0001		        ; can't backspace anymore
	call    Putch           ; show the backspace
	sub		  $s1,$s1,#1
	mov		  $s2,$s1
.0003:
	ldb		  $t0,INBUF+1[$s2]
	stb		  $t0,INBUF[$s2]
	add		  $s2,$s2,#1
	add		  $t0,$s2,#INBUF
	slt		  $t0,#INBUF+$7F

	bt		  EditMem
	seq		  $t0,#'F'
	bf		  .0009
	ldb     $t0,INBUF+1[$s1]
	sne     $t0,#'I'
	bt      .notFind
	add     $s1,$s1,#1
	jmp     Find
.notFind:
	jmp		  FillMem
.0009:
	sne		  $t0,#'S'
	bt		  .0010
	ldi		  $a0,#5					; sleep(0)
	ldi		  $a1,#1
	brk     #240
	jmp		  Monitor
.0010:
	sne		  $t0,#'K'
	bt		  .0011
	call    GetHexNum
	mov		  $a1,$a0					; a0 = pid
	ldi		  $a0,#3					; kill task
	brk     #240
	jmp		  Monitor
.0011:
	sne		  $t1,#'?'
	bt		  .0012
	ldi		  $a0,#msgMonHelp
	call    PutString
	jmp		  Monitor
.0012:
.0005:
	jmp		  Monitor

  ; align cache
doMem:
	sub	$sp,$sp,#8
	add		$s1,$s1,#1
	ldb		$t0,INBUF[$s1]
	sne   $t0,#'O'
	bt    .0001
	add		$s1,$s1,#1
.0001:
	sto		$s1,[$sp]
	ldi		$a0,#CR
	call  Putch
	ldi		$a0,#INBUF
	call  PutString
	ldo		$s1,[$sp]
	add		$sp,$sp,#8
	call  GetHexNum
	mov		$s3,$a0
	mov   $s5,$a0
	add		$s1,$s1,#1
	call	  GetHexNum
	add		$s4,$a0,$s3
.loop2:
	call	Getch						; check for ctrl-c
	seq		$a0,#3
	bt		Monitor
	ldi		$a0,#CR
	call	Putch
	mov		$a0,$s3
	call	PutHexWord
	ldi		$a0,#':'
	call	Putch
	ldi		$s2,#7
.loop:
	ldi		$a0,#' '
	call	Putch
	tst   $cr0,$t0
	bne   $cr0,.userMem
	ldi   $a0,#33         ; Fetch memory word
	mov   $a1,$s3
	brk   #240
	mov   $a0,$a1
	jmp   .0002
.userMem
	ldb		$a0,[$s3]
.0002:
	call	PutHexByte
	add		$s3,$s3,#1
	sub.	$s2,$s2,#1
	bge		.loop
	sltu  $s3,$s4
	bt	  .loop2
	call  PutInlineString
	db    ' ',' ',0
	mov   $s3,$s5
.0004:
	ldbu  $a0,[$s3]
	slt   $a0,#$20
	bt    .unprintable
	call  Putch
	jmp   .0003
.unprintable:
  ldi   $a0,#'.'
  call  Putch
.0003:
  add   $s3,$s3,#1
  sltu  $s3,$s4
  bt    .0004
  ldi   $a0,#CR
  call  Putch
	jmp		Monitor		

  ; align cache
EditMem:
	csrrs $x0,#CSR_UIE,#1        ; enable gc interrupt
	call	  GetHexNum			; get address to edit
	mov		$s3,$a0
	add		$s1,$s1,#1
	call	  GetHexNum			; get value to set
	stb		$s3,[$a0]			; update mem
	jmp		Monitor

;------------------------------------------------------------------------------
; >V 0
; Displays the virtual memory map for the specified app.
;------------------------------------------------------------------------------

  ; align cache
doVMem:
  add   $s1,$s1,#1
  call  GetDecNum
  ldi   $t1,#0
  asl   $t0,$a0,#16
.0001:
  and.  $a0,$t1,#3
  bne   .notLF
  call  PutInlineString
  db    CR,LNFD,0
.notLF:
  mov   $a0,$t0
  call  PutHexWord
  ldi   $a0,#':'
  call  Putch
  mvmap $a0,$x0,$t0
  call  PutHexHalf
  ldi   $a0,#' '
  call  Putch
  add   $t0,$t0,#1
  add   $t1,$t1,#1
  slt   $t1,#256
  bt    .0001
  jmp   Monitor

;------------------------------------------------------------------------------
; >P
; Display the PAM bits status.
;------------------------------------------------------------------------------

  ; align cache
doPStat:
  call  PutInlineString
  db    CR,LNFD,0
  ldi   $t1,#0        ; $a1 = bit number
.0001:
  ldi   $a0,#32       ; Get PAM bit pair
  brk   #240
  add   $a0,$a1,#'0'
  call  Putch
  add   $t1,$t1,#1
  slt   $t1,#MEMSZ
  bne   .0001
  jmp   Monitor
 
;------------------------------------------------------------------------------
;	>F 1000 800 EE
; Fills memory beginning at address $1000 for $800 bytes with the value $EE
;------------------------------------------------------------------------------

  ; align cache
FillMem:
	call	GetHexNum			; get address
	mov		$s3,$a0
	add		$s1,$s1,#1
	call	GetHexNum			; get length
	mov		$s4,$a0
	add		$s1,$s1,#1
	call	GetHexNum			; get byte to use
.0001:
	sub.	$s4,$s4,#1
	stb		$a0,[$s3+$s4]
	bgt		.0001
	jmp		Monitor

;------------------------------------------------------------------------------
; FI Hello
;------------------------------------------------------------------------------

  ; align cache
Find:
  ldi   $a0,#CR
  call  Putch
  ldi   $a0,#LNFD
  call  Putch
  call  SkipSpaces
  mov   $s2,$s1
.fwe:
  ldbu.   $t0,INBUF[$s2]
  seq.or  $t0,#' '
  seq.or  $t0,#CR    ; cmp power!
  bt      .endOfWord
  add     $s2,$s2,#1
  jmp     .fwe
.endOfWord:
  stb   $x0,INBUF[$s2]
  mov   $s2,$s1
  ldi   $a0,#0
  ldi   $a1,#0
.loop:
	call	Getch						; check for ctrl-c
	seq   $a0,#3
	bt	  Monitor
.0001:
  ldbu  $t0,[$a0]
  ldbu. $t1,INBUF[$s2]
  beq   .found
  seq   $t0,$t1
  bf    .next
  add   $a0,$a0,#1
  add   $s2,$s2,#1
  jmp   .loop
.next:
  mov   $s2,$s1         ; start over again with $s2
  add   $a0,$a1,#1      ; start over again with $a0, but increment by one
  ldi   $t2,#$80000     ; 512k
  mov   $a1,$a0         ; remember new starting pos.
  slt   $cr0,$a0,$t2
  bne   $cr0,.loop
  jmp   .notFound
.found:
  call  PutHexTetra
  call  PutInlineString
  db    CR,LNFD,0
  jmp   .next
.notFound:
  ldi   $a0,#CR
  call  Putch
  ldi   $a0,#LNFD
  call  Putch
  jmp   Monitor

;------------------------------------------------------------------------------
; Skip over spaces and tabs in the input buffer.
;------------------------------------------------------------------------------

  ; align cache
SkipSpaces:
.skip2:
	ldb		  $t0,INBUF[$s1]
	seq		  $t0,#' '   ; space or
	seq.or  $t0,#'\t'  ; tab - compare power use here
	bf	    .done
	add 		$s1,$s1,#1
	bra	  	.skip2
.done
  ret

;------------------------------------------------------------------------------
; Get a hex number from the input buffer.
;------------------------------------------------------------------------------

  ; align cache
GetHexNum:
	ldi		$a0,#0							; a0 = num
	call   	SkipSpaces
.next:
	ldb		  $t0,INBUF[$s1]
	sge     $t0,#'0'
	sle.and	$t0,#'9'
	bt		  .isDigit
	sge		  $t0,#'A'
	sle.and $t0,#'F'
	bt		  .isHexUpper
	sge		  $t0,#'a'
	sle.and	$t0,#'f'
	bt		.isHexLower
.0001:
	ret
.isHexUpper:
	asl		$a0,$a0,#4
	sub		$t0,$t0,#'A'
	add		$t0,$t0,#10
	or		$a0,$a0,$t0
	add		$s1,$s1,#1
	jmp		.next
.isHexLower:
	asl		$a0,$a0,#4
	sub		$t0,$t0,#'a'
	add		$t0,$t0,#10
	or		$a0,$a0,$t0
	add		$s1,$s1,#1
	jmp		.next
.isDigit:
	asl		$a0,$a0,#4
	sub		$t0,$t0,#'0'
	or		$a0,$a0,$t0
	add		$s1,$s1,#1
	jmp		.next

;------------------------------------------------------------------------------
; Get a decimal number from the input buffer.
;------------------------------------------------------------------------------
  ; align cache
GetDecNum:
	ldi		$a0,#0							; a0 = num
	call 	  SkipSpaces
.next:
	ldb		  $t0,INBUF[$s1]
	sge     $t0,#'0'
	sle.and $t0,#'9'
	bt		  .isDigit
.0001:
	ret
.isDigit:
	asl		$t2,$a0,#1    ; multiply by 10
	asl   $a0,$a0,#3    ; * 8
	add   $a0,$a0,$t2   ; + *2
	sub		$t0,$t0,#'0'
	add		$a0,$a0,$t0
	add		$s1,$s1,#1
	jmp		.next

;------------------------------------------------------------------------------
; Output an octabyte as a hex string.
;
; Parameters:
;   a0 = contains octabyte value to output
; Registers Affected:
;   none
; Returns:
;   none
;------------------------------------------------------------------------------
  ; align cache
PutHexOcta:
	ror		$a0,$a0,#32
	call	PutHexTetra
	rol   $a0,$a0,#32

;------------------------------------------------------------------------------
; Output a word as a hex string.
;
; Parameters:
;   a0 = contains word to output
; Registers Affected:
;   none
; Returns:
;   none
;------------------------------------------------------------------------------

  ; align cache
PutHexTetra:
	ror		$a0,$a0,#16
	call	PutHexWyde
	rol		$a0,$a0,#16

;------------------------------------------------------------------------------
; Output a half-word (16 bits) as a hex string.
;------------------------------------------------------------------------------

  ; align cache
PutHexWyde:
	ror		$a0,$a0,#8
	call	PutHexByte
	rol		$a0,$a0,#8

;------------------------------------------------------------------------------
; Output a byte as a hex string.
;------------------------------------------------------------------------------

  ; align cache
PutHexByte:
	ror		$a0,$a0,#4		; put the high order nybble first
	call	PutHexNybble
	rol		$a0,$a0,#4		; restore a0

;------------------------------------------------------------------------------
; Output a nybble as a hex string.
;
; Parameters:
;   a0 = contains nybble to output
; Registers Affected:
;   none
; Returns:
;   none
;------------------------------------------------------------------------------

  ; align cache
PutHexNybble:
	sub	$sp,$sp,#16
	sto		$a0,0[$sp]
	sto   $t0,8[$sp]
	and		$a0,$a0,#15		; strip off high order bits
	slt   $a0,#10
	bt		.lt10
	sub		$a0,$a0,#10
	add		$a0,$a0,#'A'-'0'
.lt10:
	add		$a0,$a0,#'0'
	call	Putch
.0001:
	ldo		$a0,0[$sp]
	ldo   $t0,8[$sp]
	add   $sp,$sp,#16
	ret

;------------------------------------------------------------------------------
; PutInlineString
;   Put a string of characters to output device. The string parameter is
; located as an inline parameter.
;------------------------------------------------------------------------------

  ; align cache
PutInlineString:
  ldo   $t1,[$sp]         ; pop return address
  add   $sp,$sp,#8
	sub		$sp,$sp,#8				
	sto		$a0,[$sp]				  ; save a0
	add		$t1,$t1,#4  			; t1 = pointer to string
.0001:
	ldb		$a0,[$t1]
	add		$t1,$t1,#1				; advance pointer to next byte
	beq 	$a0,#0,.done      ; branch if done
	call	Putch							; output character
	bra		.0001
.done:
	ldo		$a0,[$sp]				  ; restore a0
	add   $sp,$sp,#8
  jmp   [$t1]

;------------------------------------------------------------------------------
; PutString
;    Put a string of characters to the serial transmitter. Calls the 
; Putch routine, so this routine also blocks if the transmitter is not
; empty.
;
; Parameters:
;		$a0 = pointer to null terminated string to put
; Modifies:
;		$t0,$t1,$t2,$t3
; Stack Space:
;		2 words
;------------------------------------------------------------------------------
  ; align cache
PutString:
	sub		$sp,$sp,#16
	sto		$a0,[$sp]				  ; save argument
	sto   $s1,8[$sp]        ; and reg var
	mov		$s1,$a0						; t1 = pointer to string
.0001:
	ldb		$a0,[$s1]
	add		$s1,$s1,#1				; advance pointer to next byte
	beq 	$a0,#0,.done     	; branch if done
	call	Putch							; output character
	bra		.0001
.done:
	ldo		$a0,[$sp]				  ; restore argument
	ldo   $s1,8[$sp]
	add   $sp,$sp,#16
	ret

;------------------------------------------------------------------------------
;------------------------------------------------------------------------------

  ; align cache
DumpTraceQueue:
	ldi     $a6,#'X'        ; bypass='B' in fputc routine
.dmpTrace:
	ldi     $a0,#CR
	call    Putch
	ldi     $a1,#14         ; processor trace queue status
	peekq.  $a0,$a1
	bmi     .dmpTraceEmpty  ; emptied out?
	ldi     $a1,#15         ; processor trace queue data
	popq.   $a0,$a1
	call    PutHexOcta
	jmp     .dmpTrace
.dmpTraceEmpty:
	ldi     $a0,#CR
	call    Putch
.inf:
  jmp     .inf
  ret

;------------------------------------------------------------------------------
; Exception processing code staret here.
; As per the RISCV privilege spec, the MSB indicates an external interrupt.
; The system uses cause codes 32 to 63 for external devices. This cause code
; range is reserved in the RISCV spec.
;
; On incoming the register file has been set to the interrupt register file
; or the machine mode register file.
;------------------------------------------------------------------------------
  align 16
; Top of stack for different register sets
StackTbl:
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $0
  dw    $7F400-4
  dw    $7F800-4
  dw    $7FC00-4
  dw    $80000-4

	code
	align	16
IRQRout:
	csrrw	$t0,#$342,$x0			; get cause code
	tst   $t0
	bmi	  .isIRQ		        ; irq or brk #240?
	seq   $t0,#2            ; illegal instruction?
	bt    .illegal
	and   $t2,$t0,#$FFFFFFFC
	seq   $t2,#8
	bt    .brk
	; Some other cause
.illegal:
  stt   $t0,$4018
	csrrc $x0,#CSR_TRACECTRL,#1 ; turn off tracing
	ldi   $t0,#DumpTraceQueue
	csrrw $x0,#CSR_MEPC,$t0
	rte
.soc:
  jmp   .soc
.brk:
  ; We reset the stack pointer at each callto the OS in case an error causes
  ; it to be messed up.
  csrrw $t0,#CSR_RSSTACK,$x0   ; get register sets
  and   $t0,$t0,#15       ; extract register set selection (will be 13,14, or 15)
  asl   $t2,$t0,#2        ; $t2 = table index
	ldt		$sp,StackTbl[$t2]	; setup machine mode stack pointer
	jmp		OSECALL					  ; goto operating system calldispatcher
.isIRQ:
  csrrw $t0,#CSR_RSSTACK,$x0   ; get register sets
  and   $t0,$t0,#15       ; extract register set selection (will be 13,14, or 15)
  asl   $t2,$t0,#2        ; $t2 = table index
	ldt		$sp,StackTbl[$t2]	; setup machine mode stack pointer
	csrrw	$t0,#$342,$x0			; get cause code

  ldt   $t1,IRQFlag     ; update IRQ flag for Tiny Basic
  add   $t1,$t1,#1
  stt   $t1,IRQFlag
  and   $t0,$t0,#$FF
  stt   $t0,IRQCause    ; update cause code for Tiny Basic
  sub.  $t1,$t0,#1
  beq   $cr0,.softwareIrq
  sub.  $t1,$t1,#1
  beq   $cr0,.timerIrq
  sub.  $t1,$t1,#1      ; garbage collect interrupt?
  beq   $cr0,.gcIrq
	and		$t4,$t0,#31			; interrupting device # is low order 5 bits of cause code
	ldi   $t3,#5          ; try 5 times
.devAgain:
	mov   $t5,$t4
	asl		$t5,$t5,#7				; 128 bytes per device func table
	add		$t5,$t5,#DVF_Base+22*4	; load IRQ routine vector from device func table
	ldo.	$t5,[$t5]
	beq	  $cr0,.noIRQ	    ; make sure there's an address to go to
	mov   $cn,$t5
	jmp		[$cn]						; jump to the IRQ routine
.noIRQ:
  sub.  $t3,$t3,#1
  bne   $cr0,.InitDev
.softwareIrq:
.timerIrq:
  jmp   ERETx2
	; The device function tables may have been zeroed out, try initializing them.
	; The following uses $a0-$a1, $t0-$t2
.InitDev:
	seq   $t4,#5
	bf    .notSerial
	ldi		$a0,#5							; serial device
	ldi		$a1,#SerialFuncTbl
	jal	  CopyDevFuncTbl
	ldi		$a0,#5							; serial device
	ldi   $a1,#SerialDCB
	jal   CopyDevDCB
	jmp   .devAgain
.notSerial:
	ldi		$a0,#15							; VIA device
	seq   $t4,$a0
	bf    .notVia
	ldi		$a1,#ViaFuncTbl
	jal	  CopyDevFuncTbl
	ldi		$a0,#15							; VIA device
	ldi		$a1,#ViaDCB
	jal	  CopyDevDCB
	jmp   .devAgain
.notVia:
  jmp   ERETx2
.gcIrq:
;	ldi		$sp,#$7F800-4		; setup interrupt mode stack pointer
  call gcIncrement
ERETx2:
;  mDI
;  csrrc $x0,#$7C0,#31   ; select machine regs only
;  csrrw $t0,#$7C0,$x0   ; get register sets
;  srl   $t0,$t0,#5      ; extract register set selection
;  sll   $t0,$t0,#3
;  ldt   $t1,MEPC0[$t0]  ; get it
;  csrrw $x0,#$341,$t1   ; set mepc
  mDI
  nop
  nop
  csrrw $t0,#CSR_RSSTACK,$x0   ; get register sets
  and   $t0,$t0,#15       ; extract register set selection (will be 13,14, or 15)
  asl   $t2,$t0,#2        ; $t2 = table index
	ldt		$sp,StackTbl[$t2]	; setup machine mode stack pointer
	rte

	; In case the pipeline runs ahead into the following table which will
	; result in illegal instructions.
	nop
	nop
  nop

  ; align cache
DBGRout:
  rex   #3,x0
  rte
	nop
	nop
  nop

; Application startup record for system
SystemASR:
  db    0     ; page size (can't change on this system)
  db    2     ; priority normal
  db    12    ; register set for startup task
  db    0     ; memory map #0
  dw    0     ; processor affinity
  dw    0     ; code size (0 = in ROM, don't move)
  dw    0     ; reserved
  dw    0     ; data size (preinitialized data)
  dw    0     ; reserved
  dw    0     ; uninitialized data size
  dw    0     ; reserved
  dw    0     ; Heap size
  dw    0     ; reserved
  dw    1024  ; stack size
  dw    0     ; reserved
  dw    IdleTask  ; pointer to code
  dw    0       ; reserved
  dw    0     ; pointer to data
  dw    0     ; reserved
  dw    0     ; ui data
  dw    0     ; reserved

; Application startup record for Tiny Basic
TinyBasicASR:
  db    0     ; page size (can't change on this system)
  db    2     ; priority normal
  db    0     ; register set
  db    1     ; memory map
  dw    0     ; processor affinity
  dw    0     ; code size (0 = in ROM, don't move)
  dw    0     ; reserved
  dw    0     ; data size (preinitialized data)
  dw    0     ; reserved
  dw    32768 ; uninitialized data size
  dw    0     ; reserved
  dw    0     ; Heap size
  dw    0     ; reserved
  dw    2048  ; stack size
  dw    0     ; reserved
  dw    CSTART  ; pointer to code
  dw    0       ; reserved
  dw    0     ; pointer to data
  dw    0     ; reserved
  dw    0     ; ui data
  dw    0     ; reserved
    

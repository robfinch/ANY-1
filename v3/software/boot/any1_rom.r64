;------------------------------------------------------------------------------
; Get a character from input device. Checks for a CTRL-T which indicates to
; switch the I/O focus.
;
; Parameters:
;		none
; Returns:
;		$a0 = character, -1 if none available
;------------------------------------------------------------------------------
  ; align cache
Getch:
	sub		$sp,$sp,#16
	sto		$a1,8[$sp]
	ldi   $a1,#5  ;CURIN
	call  fgetc
	ldo		$a1,8[$sp]
	add   $sp,$sp,#16
	ret

;------------------------------------------------------------------------------
; Parameters:
;   $a0 = character to put
;------------------------------------------------------------------------------
  ; align cache
_putch:
  bra   dbg_Putch
  ; align cache
Putch:
  bra   dbg_Putch
	sub		$sp,$sp,#24
	sto		$a3,8[$sp]
	sto		$a1,16[$sp]
	mov		$a3,$a0
	ldi		$a1,#5  ;CUROUT    ; serial port
	call	fputc
	ldo		$a3,8[$sp]
	ldo		$a1,16[$sp]
	add   $sp,$sp,#24
	ret

  ; align cache
calcScreenPos:
  ldbu  $t0,_cursorY
  bgeu  $t3,#29,.0001
.0002:
  mulf  $t1,$t0,#56
  ldbu  $t0,_cursorX
  bgeu  $t0,#56,.0003
.0004:
  add   $t1,$t1,$t0
  sll   $t1,$t1,#3
  add   $t2,$t1,#TEXTSCR
  ret
; This is cool in ANY1. Storing a smalll constant to memory does not require
; the use of a source register. This allows the LDI and the STB to proceed
; in parallel. The store does not need to wait for a register.
.0001:
  ldi   $t0,#28
  stb   #28,_cursorY
  bra   .0002
.0003:
  ldi   $t0,#55
  stb   $t0,_cursorX
  bra   .0004

  ; align cache
incScreenPos:
  ldbu  $t0,_cursorX
  add   $t0,$t0,#1
  bltu  $t0,#56,.0001
  stb   #0,_cursorX
  ldbu  $t0,_cursorY
  add   $t0,$t0,#1
  bltu  $t0,#29,.0002
  call  dbg_ScrollUp
  ret
.0002:
  stb   $t0,_cursorY
  ret
.0001:
  stb   $t0,_cursorX
  ret
  
  ; align cache
dbg_Putch:
  beq  	$a0,#CR,.cr
  beq  	$a0,#LNFD,.lf
  ldo   $t3,_DBGAttr
  or    $t3,$a0,$t3
  call  calcScreenPos
  sto   $t3,[$t2]
  bra   incScreenPos
 .lf:
  stb   #0,_cursorX
  ldbu  $a0,_cursorY
  add   $a0,$a0,#1
  bgeu  $a0,#29,dbg_ScrollUp
  stb   $a0,_cursorY
  ret
.cr:
  stb   #0,_cursorX
  ret

  ; align cache
dbg_ScrollUp:
  ldi   $t0,#TEXTSCR
ifdef TEST
  ldi   $t1,#6
else
  ldi   $t1,#56*28
endif
.0001:
  ldo   $t2,56*8[$t0]
  sub  	$t1,$t1,#1      ; placed here eliminates pipeline bubble
  sto   $t2,[$t0]
  add   $t0,$t0,#8
  bne   $t1,#0,.0001

  ; align cache
dbg_BlankLastLine:
  ldi   $t0,#TEXTSCR+56*28
  ldi   $t1,#55
  ldi   $t2,_DBGAttr
  or    $t2,$t2,#' '
.0001:
  sto   $t2,[$t0+$t1*8]
  sub  	$t1,$t1,#1
  bgtu  $t1,#0,.0001
  ret

  ; align cache
dbg_HomeCursor:
  stb   #0,_cursorX
  stb   #0,_cursorY
  ret
  
;------------------------------------------------------------------------------
; fputc - put a character to an I/O device. If the task doesn't have the I/O
; focus then it is rescheduled, allowing another task to run.
;
; Stack Space:
;		6 words
; Register Usage:
;		a0 = FMTK_IO specify
;		a2 = device putchar function
; Parameters:
;		a1 = I/O channel
;		a3 = character to put
; Modifies:
;		none
; Returns:
;   EOF if error occurred, otherwise character to put
;------------------------------------------------------------------------------
  ; align cache
fputc:
	sub	$sp,$sp,#32
	sto		$a1,16[$sp]
	sto		$a2,24[$sp]
	seq   $a6,#'B'
	bf    .noBypass
	call  SerialPutChar
	jmp   .xit
.noBypass:
	; If the device is a UI device there may be multiple owning jobs. It doesn't
	; do any good to check for ownership. Instead the I/O focus is checked to
	; see if it's present.
	call  GetUIFlag
	tst   $cr0,$a1
	beq   $cr0,.checkOwner
  ldo   $a1,16[$sp]
	call  WaitForIOFocus
	jmp   .0001
.checkOwner:
  call  CheckDevOwner
  tst   $cr0,$a0
  bne   $cr0,.notOwner
.0001:
  ldo   $a1,16[$sp]
	ldi		$a0,#26							; FMTK_IO
	ldi		$a2,#13							; putchar function
	brk   #240
	mov   $a0,$a3
.xit:
	ldo		$a1,16[$sp]
	ldo		$a2,24[$sp]
	add   $sp,$sp,#32
	ret
.notOwner:
  ldi   $a0,#EOF
  jmp   .xit
 
;------------------------------------------------------------------------------
; fgetc - get a character from an I/O device. If the task doesn't have the I/O
; focus then it is rescheduled, allowing another task to run.
;
; Stack Space:
;		4 words
; Register Usage:
;		a0 = FMTK_IO specify
;		a2 = device getchar function
; Parameters:
;		a1 = I/O channel
; Modifies:
;		none
; Returns:
;		a0 character, -1 if none available
;------------------------------------------------------------------------------
  ; align cache
fgetc:
	sub	$sp,$sp,#32
	sto		$a1,16[$sp]
	sto		$a2,24[$sp]
	call  GetUIFlag
	tst   $a1
	beq   .checkOwner
	ldt		$a1,16[$sp]
	call  WaitForIOFocus
	jmp   .0001
.checkOwner:
	ldt		$a1,16[$sp]
  call  CheckDevOwner
  tst   $a0
  bne   .notOwner
.0001:
	ldi		$a0,#26							; FMTK_IO
	ldt		$a1,16[$sp]
	ldi		$a2,#8							; getchar function
	brk   #240
	mov   $a0,$a1
.0002:
	ldo		$a1,16[$sp]
	ldo		$a2,24[$sp]
	add   $sp,$sp,#32
	ret
.notOwner:
  ldi   $a0,#-1
  jmp   .0002


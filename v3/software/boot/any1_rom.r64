	beq		  .0005
	seq		  $t0,#'>'
	bf		  .0004
.skip2:
	add		  $s1,$s1,#1
	jmp		  .skip
.0004:
	seq		  $t0,#' '
	seq.or  $t0,#'\t'
	bt		  .skip2
	seq     $t0,#'X'  ; exit from monitor
	bf      .notX
	ldi     $a0,#E_Ok
	jmp     OSExit
